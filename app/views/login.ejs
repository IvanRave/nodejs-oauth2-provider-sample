<div class="clearfix">
  <div class="col-sm-3"></div>
  <div class="col-sm-3 col-xs-6">
    <h4>
      <%= dict.logon %>
    </h4>
  </div>
  <div class="col-sm-3 col-xs-6 text-right">
    <h4>
      <a href="<%= registerLink %>"><%= dict.register %></a>
    </h4>
  </div>
</div>

<form class="form-horizontal" action="" method="post">
	<div class="form-group">
    <label class="control-label col-sm-3" for="email"><%= dict.email %>:</label>
    <div class="col-sm-6">
      <input class="form-control" id="email" name="email" type="email" maxlength="320" required />
    </div>
	</div>
	<div class="form-group">
    <label class="control-label col-sm-3" for="pwd"><%= dict.pwd %>:</label>
    <div class="col-sm-6">
      <input class="form-control" id="pwd" name="pwd" type="password" maxlength="255" required />
    </div>
	</div>
	<div class="form-group">
    <div class="col-sm-6 col-sm-offset-3 text-right">
      <span class="text-danger">
        <%= failureMsg %>
      </span>
      <button class="btn btn-default" type="submit">
        <%= dict.logon %>
      </button>
    </div>
	</div>
</form>

<div class="col-sm-3"></div>
<div class="col-sm-6">
  <div class="well">
    <h4>Or use a demo account</h4>
    <p>A temporarily cabinet. Please do not use secret data. All data can be removed at any time.</p>
    <div class="text-center">
      <form class="form-horizontal" action="" method="post">
        <input type="hidden" name="email" value="ivanrave@yandex.ru" />
        <input type="hidden" name="pwd" value="123321" />
        <button class="btn btn-default" type="submit">Demo login</button>
      </form>
    </div>
  </div>
</div>